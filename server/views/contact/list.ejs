<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
 <!--Main Nav Navigation-->
  
<main class="container-c">
  <div class="row-l">
    <div class="offset-md-1 col-md-10">
        <h1>Business Contact List</h1>
          <%if(typeof displayName =='string'&&displayName){%>
        <a href="/contactList/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add a Contact</a>
        <%}%>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr>
              <%if(typeof displayName =='string'&&displayName){%>
                <th class="text-center col-3">Conatct Name</th>
                <th class="col-4">Email</th>
                <th class="text-center col-4">PH number</th>
                
                <th class="text-center col-2"></th>
                <th class="text-center col-2"></th>
                <%}else{%>
                  <th class="text-center col-2">Conatct Name</th>
                <th class="col-6">Email</th>
                <th class="text-center col-1">PH number</th>
                <%}%>
                </tr>
               <%for(let count = 0; count < ContactList.length; count ++){%>
                    <tr>
                          <%if(typeof displayName =='string'&&displayName){%>
                        <td class="text-center col-2"><%=ContactList[count].name%></td>
                        <td class="col-6"><%=ContactList[count].email%></td>
                        <td class="text-center col 1"><%=ContactList[count].Phnumber%></td>
                    
                        <td class="text-center col-1"><a href="/contactList/edit/<%=ContactList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                        <td class="text-center col-1"><a href="/contactList/delete/<%=ContactList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>
                        <%}else{%>
                          <td class="text-center col-2"><%=ContactList[count].name%></td>
                        <td class="col-6"><%=ContactList[count].email%></td>
                        <td class="text-center col 1"><%=ContactList[count].Phnumber%></td>
                        <%}%>  
                      </tr>
                        <%}%>
            </table>
        </div>
    </div>
  </main>

</body>
</html>
  